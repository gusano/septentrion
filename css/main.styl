---

@import 'colors'
@import 'nav'

@font-face
  font-family 'true lies'
  src url('true_lies.woff2') format('woff2')

html
body
  width 100%
  font-size 14px

  h1
  h2
    margin 0
  h1
  h2
  h3
    font-weight 600
    margin-top 22px
    margin-bottom 10px
  h2
    font-size 50px
    line-height 1
    margin-bottom 32px

  a
    color orange
    text-decoration none
    &:active
    &:focus
    &:visited
      color orange
    &:hover
      color white
      background orange
      text-decoration none

  #actions
    h3
      font-size 22px


  table
    margin auto
    tr.past
      text-decoration line-through
      text-decoration-color #c5c1c1
    td
      padding 0 20px 8px 0

.box-shadow-menu
  position fixed
  font-size 32px
  top 12px
  left 20px
  width 32px
  height 32px
  &:hover
    cursor pointer
    background transparent

.box-shadow-menu:before
  content ""
  position absolute
  left 0
  top 0.25em
  width 1em
  height 0.15em
  background white
  box-shadow 0 0.25em 0 0 white, 0 0.5em 0 0 white
  &:hover
    cursor pointer

.hamburger
  position fixed
  .hamburger-inner
  .hamburger-inner:after
  .hamburger-inner:before
    background #ddd
  &:focus
   outline 0

.menu
  display none
  position fixed
  top 12px
  left 70px
  background #eee
  ul
    list-style none
    padding-left 0
    margin 0
    li
      min-width 220px
      padding 10px 40px
      text-align center
      line-height 150%
      font-size 20px
      border-bottom 1px dotted pinky
      &:hover
        cursor pointer
        color #eee
        background pinky
        a
          color #eee
          background transparent
      &.active
        cursor default
        color #eee
        background pinky
        a
          color #eee
          background transparent
          cursor default

body
  position relative
  margin 0 auto
  // background black
  background white
  // color #ddd
  color #333
  font-family 'Open-Sans', sans-serif
  font-size 14px

@import 'parallax'

.container
  margin-right auto
  margin-left auto
  padding-left 15px
  padding-right 15px

.module.parallax
  h1.true-lies
    position relative
    font-size 16vw
    &::first-letter
      font-size 18vw

p
  margin-bottom 40px

div.action
  font-size 85%
  padding 0 14px 0 4px
  margin-bottom 10px

  .desc
    min-height 155px

  ul.gear
    margin-top 10px
    list-style none
    padding-left 0

  .credits
    display inline-block
    height 45px
    color #9e9e9e
    font-style italic
    line-height 1.2
    margin-top 10px

span.title
  color #404040
  font-style italic

footer
  margin-top 40px
  padding 20px 0
  background #eee
  border-top 1px solid #e2e2e2
  p
    margin-bottom 0
    line-height 28px

.ekko-lightbox
  a:hover
    background transparent

p.infos
  font-size 14px

.thumbs
  a:not(:first-child)
    img
      display none
      width 80px

@media (min-width: 768px)
  .container
    width 750px
  .module.parallax h1.true-lies
    font-size 14vw
    &::first-letter
      font-size 16vw

@media (min-width: 992px)
  .container
    width 970px

@media (min-width: 1200px)
  .container
    width 1170px
  .module.parallax h1.true-lies
    font-size 14vw
    &::first-letter
      font-size 16vw

@media (min-width: 1350px)
  .module.parallax h1.true-lies
    font-size 12vw
    &::first-letter
      font-size 14vw
